{
  "extends": "@zodiac/typescript-config",
  "compilerOptions": {
    "composite": true,
    "types": ["vite/client", "node"],
    "rootDirs": [".", "./.react-router/types"],
    "paths": {
      "@/test-utils": ["./test-utils/index.ts"],
      "@/components": ["./app/components/index.ts"],
      "@/utils": ["./app/utils/index.ts"],
      "@/balances": ["./app/balances/index.ts"]
    }
  },
  "include": [
    ".react-router/types/**/*",
    "vitest.setup.ts",
    "abitype.d.ts",
    "e2e/**/*",
    "app/**/*",
    "app/**/.server/**/*",
    "app/**/.client/**/*",
    "server/**/*",
    "test-utils/**/*"
  ]
}
