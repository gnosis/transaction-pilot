{
  "name": "Zodiac Pilot",
  "description": "Simulate dApp interactions and record transactions",
  "version": "0.0.0",
  "manifest_version": 3,
  "icons": {
    "16": "zodiac16.png",
    "32": "zodiac32.png",
    "48": "zodiac48.png",
    "128": "zodiac128.png"
  },
  "action": {
    "default_title": "Click to open Zodiac Pilot panel"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "externally_connectable": {
    "matches": ["<all_urls>"]
  },
  "permissions": [
    "sidePanel",
    "tabs",
    "scripting",
    "declarativeNetRequestWithHostAccess",
    "declarativeNetRequestFeedback",
    "webRequest",
    "storage"
  ],
  "background": {
    "service_worker": "build/background/index.js"
  },
  "host_permissions": ["<all_urls>"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "exclude_globs": [
        "https://connect.pilot.gnosisguild.org/",
        "about:*",
        "chrome:*"
      ],
      "run_at": "document_start",
      "js": ["build/pilot-connect/connectPilotToDApp.js"]
    },
    {
      "matches": ["<all_urls>"],
      "exclude_globs": [
        "https://connect.pilot.gnosisguild.org/",
        "about:*",
        "chrome:*"
      ],
      "run_at": "document_start",
      "js": ["build/monitor/contentScript.js"]
    },
    {
      "matches": ["https://connect.pilot.gnosisguild.org/"],
      "run_at": "document_start",
      "all_frames": true,
      "js": ["build/pilot-connect/connectOriginalWalletToPilot.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["*"],
      "matches": ["<all_urls>"]
    }
  ]
}
